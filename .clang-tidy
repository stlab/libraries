ExtraArgs:
  - "std=c++17"
Checks: >
  cert-*,
  performance-*,
  modernize-*,
  misc-include-cleaner,
  -readability-identifier-length,
  -readability-magic-numbers,
  -cppcoreguidelines-avoid-magic-numbers
CheckOptions:
  - key: misc-include-cleaner.IgnoreHeaders
    value: >
      boost/test/.*;
      __chrono/.*
HeaderFilterRegex: "^.*/include/stlab/.*$"
# WarningsAsErrors: "*"
